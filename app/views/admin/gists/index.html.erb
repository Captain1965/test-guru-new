<div class="row justify-content-center mt-3">
  <div class="col col-md-6">
    <div style="text-align: center;"><h2><%= t('.header') %></h2></div>
    <table class="table">
      <thead>
        <th><%= t('.question') %></th>
        <th><%= t('.url') %></th>
        <th><%= t('.user') %></th>
      </thead>
      <tbody>
        <% @gists.each do |gist| %>
        <tr>
          <td><%= link_to(truncate(gist.question.body, length: 25, omission: 
                '...'), admin_question_path(gist.question)) %></td>
          <td><%= link_to(gist.url, gist.url, target:'_blank') %></td>
          <td><%= gist.user.email %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
