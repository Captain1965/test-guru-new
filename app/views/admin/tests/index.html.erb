<div class="row justify-content-center mt-3">
	<div class="col col-md-4">
		<h2><%= t('.header') %></h2>
	</div>	
	<div class="col-12">
		<%= link_to t('.new'), new_admin_test_path %>
		<table class="table table-striped">
			<thead>		
				<tr>
					<th>N</th>
					<th class='sort-by-title pointer'>
						<%= t('.title') %>
						<%= octicon 'arrow-up' , class: 'text-success hide' %> 
						<%= octicon 'arrow-down' %> 
					</th>
					<th><%= t('.level') %></th>
					<th><%= t('.questions') %></th>
					<th colspan="4"><%= t('.actions') %></th>
				</tr>
			</thead>
			<tbody>	
				<%= render @tests %>
			</tbody>
		</table>
		<%= link_to t('.show_gist'), admin_gists_path, target: '_blank' %> 
	</div>

</div>
